<Window x:Class="Приложушечка.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Приложушечка"
        mc:Ignorable="d"
        Title="AddUser" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    MinWidth="200" Margin="0,102,0,0">

            <TextBlock Text="Логин"/>
            <TextBox x:Name="LoginTxb1"/>

            <TextBlock Text="Пароль"/>
            <TextBox x:Name="PassTxb1"/>

            <TextBlock Text="Роль"/>
            <ComboBox x:Name="RoleTxb1"
                      DisplayMemberPath="Title"
                      Margin="0 10"/>

            <Button Content="Сохранить"
             Click="SaveClick" Margin="0 5 0 0"/>

            <Button Content="Назад"
            Click="Goba_Click" Margin="0 5 0 0"/>

        </StackPanel>
        <TextBlock HorizontalAlignment="Center" Margin="0,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22"><Run Language="ru-ru" Text="Добавление нового пользователя"/></TextBlock>
    </Grid>
</Window>
